<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/floating_home_buttons"
  android:layout_width="match_parent"
  android:layout_height="72dp"
  android:background="@drawable/back_floating_home"
  android:orientation="horizontal">

  <ImageButton
    android:id="@+id/floating_home_button"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginVertical="16dp"
    android:layout_marginStart="16dp"
    android:background="@android:color/transparent"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_home" />

  <ImageButton
    android:id="@+id/floating_supla_button"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginVertical="16dp"
    android:layout_marginStart="16dp"
    android:background="@android:color/transparent"
    android:scaleType="fitCenter"
    android:src="@drawable/logo"
    android:tint="@color/primary" />

  <ImageButton
    android:id="@+id/floating_ewelink_button"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginVertical="16dp"
    android:layout_marginStart="16dp"
    android:background="@android:color/transparent"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_ewelink"
    android:tint="#3d76d2" />

  <ImageButton
    android:id="@+id/floating_android_button"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginVertical="16dp"
    android:layout_marginStart="16dp"
    android:background="@android:color/transparent"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_android" />
</LinearLayout>